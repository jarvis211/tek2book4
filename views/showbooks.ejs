<!DOCTYPE html>
<html lang="en">
    <%- include('header') %>
    <body>
        <div id="wrapper">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">          
                        <a class="navbar-brand navbar-link" href="/">
                            <i class="fa fa-superpowers logo" aria-hidden="true"></i>
                            <strong>Tek|Books</strong> 
                        </a>
                        <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="navcol-1">
                        <ul class="nav navbar-nav navbar-right"> 
                            <li role="presentation"><i class="fa fa-desktop" aria-hidden="true"></i><a class="text-uppercase" href="/manage/dashboard"><strong>dashboard</strong></a></li>
                            <li role="presentation"><i class="fa fa-book" aria-hidden="true"></i><a class="text-uppercase" href="/manage/showbooks"><strong>books</strong></a></li>
                            <li role="presentation"><i class="fa fa-stack-exchange" aria-hidden="true"></i><a class="text-uppercase" href="/manage/showcategory"><strong>categories</strong></a></li>
                            <li role="presentation"><i class="fa fa-sign-out" aria-hidden="true"></i><a class="text-uppercase" href="/manage/logout"><strong>Logout</strong></a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="row">
                <h1 class="text-uppercase">List Of Books</h1>
            </div>
            <div class="row table-header">
                <div class="dcol mfix col-md-3">
                    <label for="cover-image">Cover</label>
                </div>
                <div class="dcol mfix col-md-3">
                    <label for="details">Details</label>
                </div>
                <div class="dcol mfix col-md-3">
                    <label for="price">Price</label>
                </div>
                <div class="dcol mfix col-md-1">
                    <label for="edit">Edit</label>
                </div>
                <div class="dcol mfix col-md-1">
                    <label for="delete">Delete</label>
                </div>
            </div>
            <% if(books.length) { %>
                <% books.forEach(function(book) { %>
                    <div class="row show-books">
                        <div class="dcol col-md-3">
                            <img src="/images/uploads/<%= book.coverdetails.filename %>" alt=<%= book.coverdetails.filename %>>
                        </div>
                        <div class="dcol book-desc col-md-3">
                            <h2><%= book.bookname %></h3>
                            <h4><%= book.author %></h2>
                            <%- book.description %>
                        </div>
                        <div class="dcol fixp col-md-3">
                            <p><%= book.price %></p>
                        </div>
                        <div class="dcol fix col-md-1">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                            <a href="/manage/edit/<%= book._id %>">Edit</a>
                        </div>
                        <div class="dcol fix col-md-1">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                            <a href="/manage/delete/<%= book._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } %>

            <%- include('footer') %>
        </div>

        <script src="/javascripts/jquery.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>
        
    </body>
</html>