<!DOCTYPE html>
<html lang="en">
    <%- include('header') %>
    <body>
        <div id="wrapper">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">          
                        <a class="navbar-brand navbar-link" href="/">
                            <i class="fa fa-superpowers logo" aria-hidden="true"></i>
                            <strong>Tek|Books</strong> 
                        </a>
                        <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="navcol-1">
                        <ul class="nav navbar-nav navbar-right"> 
                            <li role="presentation"><i class="fa fa-home nav-icons" aria-hidden="true"></i><a class="text-uppercase" href="/"><strong>home </strong></a></li>
                            <li role="presentation"><i class="fa fa-user nav-icons" aria-hidden="true"></i><a class="text-uppercase" href="/about"><strong>About </strong></a></li>
                            <li role="presentation"><i class="fa fa-shopping-cart nav-icons" aria-hidden="true"></i><a class="text-uppercase" href="/cart"><strong>cart </strong></a></li>
                            <% if(user === undefined) { %>
                                <li role="presentation"><i class="fa fa-sign-in" aria-hidden="true"></i><a class="text-uppercase" href="/user/login"><strong>Login </strong></a></li>
                            <% } %>
                            <% if(user) { %>
                                <li role="presentation"><i class="fa fa-sign-out" aria-hidden="true"></i><a class="text-uppercase" href="/user/logout"><strong>Logout</strong></a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </nav>
            
            <div class="login-container">
                <div class="row">
                    <h1>Admin Login</h1>
                </div>
                <form class="admin-login" action="/manage/admin" method="post">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" placeholder="username" class="form-control" name="username" required>
                        <i class="fa fa-user-circle-o input-icon" aria-hidden="true"></i>
                        <p class="text-danger danger"><%= usernameErrorMsg %></p>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" placeholder="password" class="form-control" name="password" required>
                        <i class="fa fa-unlock-alt input-icon" aria-hidden="true"></i>
                        <p class="text-danger danger"><%= passwordErrorMsg %></p>
                    </div>

                    <input type="submit" value="Login" class="btn btn-info">
                </form>
            </div>

            <%- include('footer') %>
        </div>

        <script src="/javascripts/jquery.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>
        
    </body>
</html>