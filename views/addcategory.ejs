<!DOCTYPE html>
<html lang="en">
    <%- include('header') %>
    <body>
        <div id="wrapper">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">          
                        <a class="navbar-brand navbar-link" href="/">
                            <i class="fa fa-superpowers logo" aria-hidden="true"></i>
                            <strong>Tek|Books</strong> 
                        </a>
                        <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="navcol-1">
                        <ul class="nav navbar-nav navbar-right"> 
                            <li role="presentation"><i class="fa fa-desktop" aria-hidden="true"></i><a class="text-uppercase" href="/manage/dashboard"><strong>dashboard</strong></a></li>
                            <li role="presentation"><i class="fa fa-book" aria-hidden="true"></i><a class="text-uppercase" href="/manage/showbooks"><strong>books</strong></a></li>
                            <li role="presentation"><i class="fa fa-stack-exchange" aria-hidden="true"></i><a class="text-uppercase" href="/manage/showcategory"><strong>categories</strong></a></li>
                            <li role="presentation"><i class="fa fa-sign-out" aria-hidden="true"></i><a class="text-uppercase" href="/manage/logout"><strong>Logout</strong></a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            
            <% if(errors.length) { %>
                <% errors.forEach(function(error) { %>
                    <ul>
                        <li class="cat-errors"><%= error.msg %></li>
                    </ul>
                <% }) %>
            <% } %>
            <div class="row">
                <h3 class="text-uppercase">Add Category</h3>
            </div>
            <form class="add-books" action="/manage/addcategory" method="post">
                <div class="form-group">
                    <label for="category_no">Category No</label>
                    <input type="text" placeholder="Category No" class="form-control" name="CategoryNo" required>
                </div>
                <div class="form-group">
                    <label for="category_name">Category Name</label>
                    <input type="text" placeholder="Category Name" class="form-control" name="CategoryName" required>
                </div>

                <input type="submit" value="Submit" class="btn btn-info">
            </form>

            <%- include('footer') %>
        </div>

        <script src="/javascripts/jquery.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>
        
    </body>
</html>